    android:layout_margin="6dp">

    <ListView
        android:id="@+id/lstPerguntas_ACTListaPerguntas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnNovaPergunta_ACTListaPerguntas"
