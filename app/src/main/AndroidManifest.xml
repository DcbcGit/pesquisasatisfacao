<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dualmicro.pesquisasatisfacao">

    <!--
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_primeira__pergunta"
            android:theme="@style/FullscreenTheme">
            android:theme="@style/Theme.AppCompat.NoActionBar"
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/TelaCheiaCadastro">
        <activity
            android:name=".View.TelaInicial"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape"
            android:theme="@style/TelaCheia" />
        <activity
            android:name=".View.TelaPerguntas"
            android:screenOrientation="landscape"
            android:theme="@style/TelaCheia" />
        <activity
            android:name=".View.TelaListaPerguntas"
            android:label="Perguntas Cadastradas"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".View.TelaAvisoCadastroPerguntas"
            android:label="ATENÇÃO..."
            android:screenOrientation="portrait"
            android:theme="@style/TelaCheia" />
        <activity
            android:name=".View.TelaSplashInicial"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.TelaCadastroPerguntas" />
        <activity
            android:name=".View.TelaFinalPesquisa"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape"
            android:theme="@style/TelaCheia" />

        <activity
            android:name=".View.TelaAnalisePesquisa"
            android:screenOrientation="landscape"
            android:label="Relatorio da Pesquisa"
            android:theme="@style/AppTheme"
            ></activity>
    </application>

</manifest>